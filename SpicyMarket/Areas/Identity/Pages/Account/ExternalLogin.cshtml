@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>
<hr />

<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-12">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="whiteBackground border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row form-group">
                    <div class="col-2">
                        <label asp-for="Input.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" class="form-control" asp-for="Input.Name" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-2">
                        <label asp-for="Input.Email" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" class="form-control" asp-for="Input.Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-2">
                        <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" class="form-control" asp-for="Input.PhoneNumber" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-2">
                        <label asp-for="Input.StreetAdress" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" class="form-control" asp-for="Input.StreetAdress" />
                        <span asp-validation-for="Input.StreetAdress" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-2">
                        <label asp-for="Input.City" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" class="form-control" asp-for="Input.City" />
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-2">
                        <label asp-for="Input.State" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" class="form-control" asp-for="Input.State" />
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-2">
                        <label asp-for="Input.PostalCode" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" class="form-control" asp-for="Input.PostalCode" />
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>

             
                <div class="row form-group">
                    <div class="col-5 offset-2">
                        <button type="submit" class="btn btn-primary form-control">Register</button>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
