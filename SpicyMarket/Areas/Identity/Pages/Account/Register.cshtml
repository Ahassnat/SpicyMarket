@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br />
<h2 class="text-info">Create New User</h2>
<br />
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div class="whiteBackground border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.Name" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.Email" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.PhoneNumber" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.StreetAdress" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.StreetAdress" />
                <span asp-validation-for="Input.StreetAdress" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.City" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.City" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.State" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.State" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.PostalCode" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.PostalCode" />
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.Password" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Input.ConfirmPassword" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>



        <div class="row form-group">
            <div class="col-5 offset-2">
                <button type="submit" class="btn btn-primary form-control">Register</button>
            </div>
        </div>

    </div>



</form>








