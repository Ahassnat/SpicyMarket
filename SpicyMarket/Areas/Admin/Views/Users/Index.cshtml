@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whiteBackground border">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-info"> Users List</h2>
        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"> 
                <i class="fas fa-plus"> &nbsp; New Employee Register</i>
               
            </a>
        </div>
    </div>

    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger"> No Users ...</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.PhoneNumber)
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PhoneNumber)
                </td>
                <td >
                    <a class="btn btn-success" asp-action="LockUnLock" ><i class="fas fa-lock-open"></i></a>

                </td>
            </tr>
                }

            </table>
        }
    </div>
</div>

