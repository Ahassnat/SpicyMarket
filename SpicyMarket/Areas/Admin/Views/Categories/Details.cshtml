@model Category
@{
    ViewData["Title"] = "Details";
}


<br />
<h2 class="text-info"> Category Details</h2>
<br />

<div class="whiteBackground border">

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Id" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input type="text" readonly class="form-control" asp-for="Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input type="text" readonly class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-5 offset-2">
            <partial name="_EditAndBackToListButtonsPartial" model="@Model.Id" />
        </div>
    </div>
</div>


